extends layout.jade
block header
    .container
        .col-sm-4
            form.form-signin(action='/signIn',method='post')
                h2.form-signin-heading Sign In
                input.form-control#Email(type="email", placeholder="Email address", autofocus="autofocus")
                br
                input.form-control#Passwd(type="password", placeholder="password")
                label Remember me 
                        input(type="checkbox", data-toggle="toggle") 
                button.btn.btn-lg.btn-primary.btn-block#signIn(type="submit") Sign in
                script(src='node_modules/jquery/dist/jquery.min.js')
                script(src='node_modules/bootstrap/dist/js/bootstrap.min.js')