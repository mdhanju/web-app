extends layout.jade
block header
    .row
        .col-sm-6.col-sm-6-custom
            form.form-inline.col-sm-6-custom-home-mor(action='/morData',method='post')
                        h3.form-signin-heading Mortgage Calculator
                        .con-label-input
                            label(for='homeValue') Home Value: 
                            input.form-control#homeValue(type='text', placeholder='100000.00 $', autofocus='autofocus', name='homeValue')
                        br
                        .con-label-input
                            label(for='homeDownpayment') Down Payment : 
                            input.form-control#homeDownpayment(type='text', placeholder='100000.00 $',name='homeDownpayment')
                        br
                        .con-label-input
                            label(for='interestRate') Interest Rate :  
                            input.form-control#interestRate(type='text',placeholder='5.0 %',autofocus='autofocus',name='interestRate')
                        br
                        .con-label-input
                            label(for='loanTerm') Loan Term : 
                            select.form-control#loanTerm(name='loanTerm')
                                option(value='', selected='selected') Select  Loan Term
                                option  15 Years Fixed   
                                option 30 Years Fixed
                                option 5/1 ARM
                        br
                        .con-label-input
                            label(for='propertyTax') Property tax : 
                            input.form-control#homeDownpayment(type='text', placeholder='1.25 %',name='propertyTax')
                        br
                        .con-label-input
                            label(for='pMI') PMI : 
                            input.form-control#pMI(type='text', placeholder='0.25 %',name='pMI')
                        br
                        .btn-custom-home-mor-holder
                            button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit