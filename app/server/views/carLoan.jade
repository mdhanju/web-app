extends layout.jade
block body
    include ./header.jade
        .row
            .col-sm-6.col-sm-6-custom
                form.form-inline.col-sm-6-custom-home-mor(action='/carLoan',method='post')
                            h3.form-signin-heading Car Payment
                            br
                            .con-label-input
                                label(for='carCondition') Car Condition : 
                                select.cutomSelectWeather.form-control#carCondition(name='carCondition')
                                    option(value='', selected='selected') Are you buying New or Used
                                    option  New   
                                    option  Used
                            br
                            .con-label-input
                                label(for='carValue') Car Value: 
                                input.cutomSelectWeather.form-control#homeValue(type='text', placeholder='100000.00 $', autofocus='autofocus', name='carValue')
                            br
                            .con-label-input
                                label(for='downpayment') Down Payment : 
                                input.cutomSelectWeather.form-control#downpayment(type='text', placeholder='100000.00 $',name='downpayment')
                            br
                            .con-label-input
                                label(for='tradeIn') Trade In  : 
                                input.cutomSelectWeather.form-control#tradeIn(type='text', placeholder='100000.00 $',name='tradeIn')
                            br
                            .con-label-input
                                label(for='interestRate') Interest Rate :  
                                input.cutomSelectWeather.form-control#interestRate(type='text',placeholder='5.0 %',autofocus='autofocus',name='interestRate')
                            br
                            .con-label-input
                                label(for='loanTerm') Loan Term : 
                                select.cutomSelectWeather.form-control#loanTerm(name='loanTerm')
                                    option(value='', selected='selected') Select  Loan Term
                                    option  24 Months   
                                    option  36 Months
                                    option  48 Months
                                    option  60 Months
                                    option  72 Months
                            br
                            .con-label-input
                                label(for='saleTax') Sale Tax : 
                                select.cutomSelectWeather.form-control#saleTax(name='saleTax')
                                    option(value='9.5%', selected='selected') 9.00 % Estimated
                            br
                            .btn-custom-home-mor-holder
                                button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit